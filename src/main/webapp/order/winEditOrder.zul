<window id="winEditOrder" closable="true" apply="org.edec.order.ctrl.WinEditOrderCtrl" width="90%" height="100%">
    <caption>
        <label value="Редактирование приказа" style="text-weight: 700;" />
    </caption>
    <vlayout vflex="1">
        <hlayout height="30px">
            <label value="Описание приказа"/>
            <textbox id="tbDescOrder" placeholder="Введите описание приказа" width="250px"/>
            <button id="btnSaveDesc" label="Сохранить описание"/>
        </hlayout>
        <hlayout height="100px">
            <button hflex="1" vflex="1" id="btnDeleteSelectedStudents" label="Удалить выбр. студентов"/>
            <button hflex="1" vflex="1" id="btnAddStudents" label="Добавить студентов"/>
            <button hflex="1" vflex="1" id="btnShoePreviewPdf" label="Предпросмотр"/>
            <button hflex="1" vflex="1" id="btnAttachedFiles" label="Прикрепленные файлы"/>
            <button hflex="1" vflex="1" id="btnAttachNewFiles" label="Прикрепить файлы"/>
            <button visible="false" hflex="1" vflex="1" id="btnCreateNewServiceNote" label="Служ. записка"/>
            <button hflex="1" vflex="1" id="btnSendToServer" label="Отправить на согласование"/>
        </hlayout>
        <groupbox id="gbContent" height="100%" vflex="1" contentStyle="overflow:auto;"/>
    </vlayout>
</window>